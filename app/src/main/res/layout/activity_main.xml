<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#B19401"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/imgv_foto"
        android:layout_width="326dp"
        android:layout_height="242dp"
        android:scaleType="fitXY"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.031"
        app:srcCompat="@drawable/realisticcatsmurf" />

    <TextView
        android:id="@+id/txtv_nome"
        android:layout_width="205dp"
        android:layout_height="51dp"
        android:fontFamily="serif"
        android:text="Eric Rian de Medeiros Cabral"
        android:textAlignment="center"
        android:textAllCaps="false"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        android:textColor="#00FF04"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.165"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imgv_foto"
        app:layout_constraintVertical_bias="0.023" />

    <TextView
        android:id="@+id/txtv_rgm"
        android:layout_width="126dp"
        android:layout_height="51dp"
        android:fontFamily="serif"
        android:text="1730003431"
        android:textAlignment="center"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        android:textColor="#11FF00"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.88"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imgv_foto"
        app:layout_constraintVertical_bias="0.021" />

    <EditText
        android:id="@+id/edt_nome"
        android:layout_width="348dp"
        android:layout_height="51dp"
        android:layout_marginStart="42dp"
        android:layout_marginTop="190dp"
        android:layout_marginEnd="160dp"
        android:layout_marginBottom="225dp"
        android:ems="10"
        android:fontFamily="serif"
        android:hint="Digite seu nome"
        android:inputType="text"
        android:textColor="#266300"
        android:textColorHint="#0A6001"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.057"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtv_nome"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/btn_iniciar"
        android:layout_width="161dp"
        android:layout_height="61dp"
        android:backgroundTint="#153CC8"
        android:fontFamily="serif"
        android:text="Iniciar Quiz"
        android:textColor="#FFFFFF"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.136"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.819" />

    <Button
        android:id="@+id/btn_sair"
        android:layout_width="161dp"
        android:layout_height="61dp"
        android:backgroundTint="#153CC8"
        android:fontFamily="serif"
        android:text="Fechar Quiz"
        android:textColor="#FFFFFF"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.472"
        app:layout_constraintStart_toEndOf="@+id/btn_iniciar"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.819" />

</androidx.constraintlayout.widget.ConstraintLayout>